<div id="post">
        <div id="postheader">
          
            <h3>{{post.title}}</h3>
            <h5>posted by: {{post.user.username}}</h5>
        </div>
        <p>{{post.content}}</p>
        <div id="postfooter">
            <h5>posted on: {{post.createdAt}}</h5>
            <h5>updated on: {{post.updatedAt}}</h5>
            {{#unless user}}
            <p>sign in to leave a comment</p>
            {{/unless}}
{{#if user}}
               <form action="/post/:{{post.id}}" method="POST">
                <input name="content" type="text" placeholder="">

                <button>Add a comment</button>
            </form>
            {{/if}}
       </div>